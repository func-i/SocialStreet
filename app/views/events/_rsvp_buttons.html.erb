<% if current_user && rsvp = event.event_rsvps.attending.by_user(current_user).first%>
  <div class="invite-friends-btn">
    Invite Friends
  </div>
  <div class="unattend-btn">
    <%=link_to "Click here if you can no longer attend...", [:edit, event, rsvp], :remote=>true %>
  </div>
<% else %>
  <div class="join-event-btn ajax-link" data-ajax-href='<%= new_event_event_rsvp_path(event)%>'>
    I'll Join
  </div>
<% end %>