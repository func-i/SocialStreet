<div class="holder">
  <div style="float:left;width:100%;">
    <%= image_tag('/images/ss_site_logo.png', :class=>"logo nav-link", "data-ajax-href"=>root_path) %>

    <%= image_tag('explore-btn.png', :class=>"nav-link remove-how-it-works", "data-ajax-href" => root_path, :style=>"margin-right:10px;") %>
    <%= image_tag('plan-btn.png', :class=>"nav-link remove-how-it-works", "data-ajax-href" => new_event_path) %>

    <div class="header-right <%= "not-signed" unless user_signed_in? %>">
      <div id="how_it_works_btn" class="remove-how-it-works">
        What is SocialStreet?
      </div>

      <% if user_signed_in? %>

        <div id="signed_in_holder">
          <div><%= avatar(current_user, :size => "30x30", :class=>'drop-shadow skip-hovercard') %></div>
          <div id="signed_in_button">
            <span id="current_user_name">
              <%=current_user.name%>
            </span>
            <ul class="drop-shadow">
              <li><%=link_to "Settings", edit_profile_path(current_user) %></li>
              <li><%=link_to "Sign Out", destroy_user_session_path%></li>
            </ul>
          </div>
        </div>
      <% else %>
        <div id="signin_button" data-href='/auth/facebook'>
          <%= image_tag("sign-in-logo.png", :id =>"" , :class => "sign-in-ribbon", :style => "float: right; position: absolute; top: -38px;") %>
        </div>
        <div class="how-it-works hidden" style="margin-top:7px;">
          <%= image_tag "sign-in-arrow.png", :style => "margin-right: 5px; float: right;" %>
          <span class="chalk" style="margin-right: 5px; float: right;">Sign in with Facebook</span>
        </div>
      <% end %>
    </div>
  </div>
</div>
