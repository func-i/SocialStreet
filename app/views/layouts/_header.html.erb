<div id="header">
  <h1><a href="/">SocialStreet</a></h1>
  <div id="user-navigation">
    <ul class="wat-cf">
      <% if user_signed_in? %>
        <li><%= link_to 'Profile', '#' %></li>
        <li><%= link_to "Authentications", [:authentications] %></li>
        <li><%= link_to t("web-app-theme.logout", :default => "Logout"), destroy_user_session_path, :class => "logout" %></li>
      <% else %>
        <li><%= link_to 'Sign in', [:authentications] %></li>
      <% end %>
    </ul>
  </div>
  <div id="main-navigation">
    <ul class="wat-cf">
      <li class="first <%= 'active' if @on_events %>"><%= link_to 'Find Events', :events %></li>
      <li class="<%= 'active' if @on_how_it_works %>"><%= link_to 'How it works', how_path %></li>
      <li class="<%= 'active' if @on_create_event %>"><%= link_to 'Create Event', [:new, :event] %></a></li>
    </ul>
  </div>
</div>