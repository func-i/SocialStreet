<div class="holder">
  <div style="float:left;width:100%;">
    <h1 class="logo nav-link" data-ajax-href="<%= root_path %>"></h1>

    <%= image_tag('explore-btn.png', :class=>"nav-link", "data-ajax-href" => root_path, :style=>"margin-right:10px;") %>
    <%= image_tag('plan-btn.png', :class=>"nav-link", "data-ajax-href" => new_event_path) %>

    <div class="header-right">
      <div id="how_it_works_btn">
        How it Works
      </div>

      <% if user_signed_in? %>

        <div><%= avatar(current_user, :size => "30x30", :class=>'drop-shadow') %></div>
        <div id="signed_in_button">
          <span id="current_user_name">
            <%=current_user.name%>
          </span>
          <ul class="drop-shadow">
            <!--<li><%#=link_to "Settings", '#' %></li>-->
            <li><%=link_to "Sign Out", destroy_user_session_path%></li>
          </ul>
        </div>
      <% else %>
        <div id="signin_button" data-href='/auth/facebook'>
          Sign In
        </div>
      <% end %>

    </div>
  </div>
</div>
