<!DOCTYPE html>
<html>
  <head>
    <title>SocialStreet</title>
    <%= stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/default/style", "web-app-theme/override",
      '/jquery-ui-1.8.11.custom/css/smoothness/jquery-ui-1.8.11.custom.css' %>
    <%= javascript_include_tag :defaults, '/jquery-ui-1.8.11.custom/js/jquery-ui-1.8.11.custom.min.js' %>
    <%= csrf_meta_tag %>
    <%= yield :head %>
  </head>
  <body>
    <div id="container">
      <%= render 'layouts/header' %>
      <div id="wrapper" class="wat-cf">
        <%= render 'layouts/flash_notices' %>
        <div id="main">
          <%= yield %>
          <div id="footer">
            <div class="block">
              <p>Copyright &copy; <%= Time.now.year %> SocialStreet.</p>
            </div>
          </div>
        </div>
        <div id="sidebar">
          <%= yield :sidebar %>
        </div>
      </div>
    </div>
    <%= yield :end_of_body  %>
    <div id="fb-root"></div>
    <script src="http://connect.facebook.net/en_US/all.js"></script>
    <script>
      FB.init({
        appId  : '<%= FACEBOOK_APP_ID %>',
        status : true, // check login status
        cookie : true, // enable cookies to allow the server to access the session
        xfbml  : true  // parse XFBML
      });
    </script>
    <%= yield :fb_scripts %>
  </body>
</html>
