<%# Pass file_name_var as a local to call this loader%>
var myContent = '<%= escape_javascript(render(:file => file_name_var)) -%>';

$('#left_side_pane').html('<%= escape_javascript content_for :left_side_pane %>');
$('#right_side_pane').html('<%= escape_javascript content_for :right_side_pane %>');
$('#center_pane').html('<%= escape_javascript content_for :center_pane %>');
$('#bottom_pane').html('<%= escape_javascript content_for :bottom_pane %>');
$('#top_pane').html('<%= escape_javascript content_for :top_pane %>');

$('#other_content').html(myContent);//Make sure this is last so the content has been loaded before any inline scripts are run