    <span>Attending</span>
  <% end %>

  <p>or
    <%= link_to_popup_modal_ajax  'Invite People', 'Invite your friends', 'empty_modal_1', load_modal_event_rsvp_invitation_path(@event, @rsvp, :js), nil, nil, :id => "add_invitees_button"  %>
