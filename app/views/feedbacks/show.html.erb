<div class="view-all-modal">
  <% if @rsvps.empty? %>
    No one else attended this StreetMeet
  <% else %>
    <ul>
      <% @rsvps.each do |rsvp| %>
        <%= render 'rsvp', :rsvp => rsvp %>
      <% end %>
    </ul>
  <% end %>
</div>

<% content_for :end_of_body do %>
  <script>
    $(function() {
      $('.add-to-fb-button').click(function(e) {
        e.stopPropagation();
        var $btn = $(this);
        var friendId = $btn.data('fb-uid');
        console.log(friendId);
        FB.ui(
        {
          method: 'friends',
          name: 'Name goes here',
          id: friendId
        },
        function(response) {
          console.log(response);
          if (response && response.action == 1) {
            alert('Friend request was sent');
            $btn.remove();
          } else {
            alert('Friend request was not sent.');
          }
        }
      );
        return false;
      });
    });
  </script>
<% end %>