    <%= form.text_field :first_name, :class => "text_field"  %>
  </div>
  <div class="group">
    <label class="label">Last Name</label>
    <%= form.text_field :last_name, :class => "text_field"  %>
  </div>
  <div class="group">
    <label class="label">Username</label>
    <%= form.text_field :username, :class => "text_field"  %>
  </div>
  <div class="group">
    <label class="label">Email</label>
    <%= form.text_field :email, :class => "text_field"  %>
  </div>