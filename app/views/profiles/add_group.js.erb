<% if @success %>
  hideGroups();


  if(isOnShowEvent()){
    rsvpToEvent();
  }
  else if(isOnSettings()){
    addGroupToHolder($('#group_permission_name').val() ,$('#group_permission_icon_class').val(), "/groups/" + <%=@group.id%>);
  }
  else if(isOnShowGroup()){
    $('#join_group_btn').addClass('hidden');
    refreshExploreResults();
  }
<% else %>
  $('.permission-applied').addClass('hidden');
  $('.permission-error').removeClass('hidden');
<% end %>