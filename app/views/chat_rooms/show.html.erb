<div id="chat_<%= @chat_room.id %>">
  <div>
    <div class="chat-title"><%= @chat_room.name %></div>
    <div class="chat-nav">
      <%= link_to "-", '#', :class => "chat-minimize" %>
      <%= link_to "X", '#', :class => "chat-close" %>
    </div>
    <div style="clear:both"></div>
  </div>
  <ul class="chat-content">
    <% @chat_room.messages.limit(50).order('created_at ASC').each do |message| %>
      <%= render :partial => 'messages/message', :locals => {:message => message} %>
    <% end %>
  </ul>
  <%= form_for [@chat_room, Message.new], :remote => true do |f| %>
    <%= f.text_field :content, :class=>'chat-text-field' %>
  <% end %>

</div>

