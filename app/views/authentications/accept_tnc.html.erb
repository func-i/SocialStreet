<script type="text/javascript">
  $(function() {
    //Set the modal title
    $('#empty_modal_base').find('#modal-title').text("Welcome to SocialStreet");

    //Set the content
    $('#empty_modal_base').find('.ajax-content').html('<%= escape_javascript(render(:template => 'authentications/accept_tnc_modal.html')) %>');

    //show modal
    $('#empty_modal_base').show();

    //Show overlay
    if(document.getElementById("ss_modal_overlay") === null)
    {
      $("body").append("<div id='ss_modal_overlay'></div>");
      $("#ss_modal_overlay").addClass("ss_modal_overlayBG");
    }

  });
</script>




