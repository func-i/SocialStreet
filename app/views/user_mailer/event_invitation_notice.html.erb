<table style="width:98%;border:0;cellspacing:0;cellpadding:40;">
  <tbody>
    <tr>
      <td style="background-color: #FFFFFF;width:100%;font-family:'arial',helvetica,sans-serif;">
        <table style="cellpadding:0;cellspacing:0;border:0;width:620;">
          <tbody>
            <tr>
              <td style="background:#333;color:#FFFFFF;font-weight:bold;font-family:'arial',helvetica,sans-serif;vertical-align:middle;padding:4px 8px;font-size:16px;letter-spacing:-0.03em;text-align:left;">
                <%= link_to "SocialStreet", root_path, :style=>"color:#F7EF6F;text-decoration:none;"%>
              </td>
            </tr>
            <tr>
              <td colspan="2" style="background-color:#FFFFFF;border-bottom:1px solid #3b5998;border-left:1px solid #CCCCCC;border-right:1px solid #CCCCCC;font-family:'arial',helvetica,sans-serif;padding:15px;valign:top;">
                <table style="width:100%;">
                  <tbody>
                    <tr>
                      <td style="width:100%;font-size:12px;valign:top;align:left;">
                        <div style="margin-bottom:15px;font-size:12px">
                          Hi <%=@invitation.to_user.first_name%>,
                        </div>
                        <div style="margin-bottom:15px">
                          <%=@invitation.user.name%> invited you to
                          <%=link_to @event.title, event_url(@event), :style=>"color:#0981BE;text-decoration:none;font-weight:bold"%>
                          .
                        </div>
                        <div style="margin-bottom:15px">
                          <div style="border-bottom:1px solid #ccc;line-height:5px;">
                            &nbsp;
                          </div>
                          <table style="cellspacing:0;cellpadding:0;border-collapse:collapse;margin-top:5px;">
                            <tbody>
                              <tr style="vertical-align:top">
                                <td style="padding-right:5px">
                                  <%= image_tag('http://www.socialstreet.com' + url_for_event_image(@event), :size => "80x80", :class => "avatar") %>
                                </td>
                                <td>
                                  <%=link_to @event.title, event_url(@event), :style=>"color:#0981BE;text-decoration:none;font-weight:bold"%>
                                  <br/>
                                  What: <%=@event.searchable_event_types.collect(&:name).to_sentence%>
                                  <br/>
                                  <% event_when = @event.starts_at.strftime("%B %d %l:%M %p")%>
                                  <% if @event.finishes_at %>
                                    <% if @event.end_date != @event.start_date%>
                                      <% event_when += ' - ' + @event.finishes_at.strftime("%B %d %l:%M %p")%>
                                    <% else %>
                                      <% event_when += ' - ' + @event.finishes_at.strftime("%l:%M %p")%>
                                    <% end %>
                                  <% end %>
                                  When: <%=event_when%>
                                  <br/>
                                  Where: <%=address_for(@event.location)%>
                                  <br/>
                                  <br/>
                                </td>
                                <td style="padding-left: 100px">
                                  <!--Attend button-->
                                  <%= link_to [:new, @event, :rsvp], :style=>"background: #69B2D7;color:#FFFFFF;font:normal normal bold 11px/25px Arial, Helvetica, sans-serif;text-decoration: none;width:100px;height:29px;margin: 8px 0px 0px;line-height: 17px;font-size: 13px;border-bottom-left-radius: 4px 4px;border-bottom-right-radius: 4px 4px;border-top-left-radius: 4px 4px;border-top-right-radius: 4px 4px;float:right;text-align:center;" do %>
                                    <span style="padding: 6px 7px;display:block">
                                      Attend
                                    </span>
                                  <% end %>
                                </td>
                              </tr>
                            </tbody>
                          </table>
                          <div style="border-bottom:1px solid #ccc;line-height:5px">
                            &nbsp;
                          </div>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
                <br/>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>