<div data-role="page" id="invite-users-page">
  <div data-role="header" data-position="inline">
    <a data-theme ="c" data-rel="back" data-icon="arrow-l">Back</a>
    <h1>SocialStreet</h1>
  </div>

  <div data-role="content">
    <%= link_to 'Send Invites', '#', {"data-role" => "button", "data-theme" => "b", "data-icon" => "check", "id" => "invite-submit"} %>
    <div data-role="fieldcontain">

      <%= form_tag event_rsvp_invitations_path(@event, @rsvp), :method => :post, :id => "invite-form" do %>
        <fieldset data-role="controlgroup" id="invite-users-list">
          <% @users.each do |u| %>
            <%= check_box_tag "user_ids[]", u.id, @event.invitations.collect(&:user).include?(u), :class => "custom", :id => "user_#{u.id}"  %>
            <label for="user_<%=u.id%>"><%= avatar(u, :exclude_link => true, :size => "40x40") %> <%= u.name %></label>              
          <% end %>
        <% end %>
      </fieldset>
    </div>
  </div>
</div>

