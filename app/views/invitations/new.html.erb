<%= render 'invitations/invitation_tool' %>

<% content_for :end_of_body do %>
  <%= javascript_include_tag 'jquery.pageless' -%>
  <script>
    $(function() {
      $('#invitation-user-list').pageless({
        container: '#invitation-user-list',
        totalPages: <%= @num_pages -%>,
        url: '<%= new_event_rsvp_invitation_path(@event, @rsvp) %>',
        loaderMsg: 'Loading more results',
        params: $('form.search-params-invitations').serializeObject(),
        currentPage: <%= params[:page] || 1 %>
      });
    });
  </script>
<%- end -%>