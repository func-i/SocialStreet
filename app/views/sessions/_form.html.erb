<div class="group wat-cf">
  <div class="left">
    <%= form.label :email, :class => "label right" %>
  </div>
  <div class="right">
    <%= form.text_field :email, :class => "text_field" %>
  </div>
</div>
<div class="group wat-cf">
  <div class="left">
    <%= form.label :password, :class => "label right" %>
  </div>
  <div class="right">
    <%= form.password_field :password, :class => "text_field" %>
  </div>
</div>

<% if devise_mapping.rememberable? -%>
  <p><%= form.check_box :remember_me %> <%= form.label :remember_me %></p>
<% end -%>

<div class="group navform wat-cf">
  <div class="right">
    <button class="button" type="submit">
      <img src="/images/web-app-theme/icons/key.png" alt="Save" /> Login
    </button>
  </div>
</div>
<%= render :partial => "devise/shared/links" %>