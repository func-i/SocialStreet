<div id="group_permission_holder" class="group-permission-holder container hidden">
  <div id="close_group_permissions_btn" class="popup-close"><%= image_tag "btn-close5.png" %></div>
  <div id="group_permission_icon" class="group-type-image rounded-corners-fifteen drop-shadow"></div>
  <div id="group_permission_text" class="text-shadow">
    To join this group, please enter your <span class="join-code-text">Join Code</span>:
  </div>
  <div style="clear: both"></div>
  <div id="group_permission_text_field_holder">
    <%= text_field_tag 'group_permission_code', '', :type => "text", :title => "permission_code", :placeholder => " Enter Code Here....", :id=>'group_permission_text_field', :class=>'permission-code-field ie-placeholder', :style => "width:100%; height:35px;" %>
  </div>
  <%= image_tag('continue-button.png', :class=>"next-arrow drop-shadow") %>
  <div id="group_permission_error" class="permission-error hidden text-shadow">Sorry, we can't find this <span class="join-code-text">Join Code</span> in our records. <span style="color:#BF1F1E">Click here</span> to apply for membership.</div>
  <div id="group_permission_applied" class="permission-applied hidden text-shadow">Applied</div>
  <div style="clear: both"></div>

  <%= hidden_field_tag 'group_permission_id', ''%>
  <%= hidden_field_tag 'group_permission_name', ''%>
  <%= hidden_field_tag 'group_permission_icon_class', ''%>
</div>