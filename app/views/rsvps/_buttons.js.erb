if($('#attend-button').length > 0){
  $('#attend-button').html('<%=escape_javascript( render(:partial => "shared/attending_buttons", :locals => {:event => @event, :rsvp => @rsvp}))%>');
  $.each($('.attendee_<%=current_user.id%>'), function(index, ele){
    $(ele).remove();
  });
}
else if($('.event_attend_button_<%= @event.id -%>').length > 0) {
  $.each($('.event_attend_button_<%= @event.id -%>'), function(index, ele) {
    $(ele).html('<%=escape_javascript( render(:partial => "shared/attending_buttons", :locals => {:event => @event, :rsvp => @rsvp}))%>');
  });
}

<%if @rsvp && @rsvp.status == Rsvp.statuses[:attending] %>
  popup_modal_ajax('#empty_modal_sidebar', 'Invite your friends', '<%=load_modal_event_rsvp_invitation_path(@event, @rsvp, :js)%>', null);
<% end %>