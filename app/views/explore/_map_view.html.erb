<script>
  function resizeMap() {
    var winHeight = $(window).height();
    var resultsPosT = $("#location-map").offset().top;
    $("#location-map").height(winHeight - resultsPosT);
  }
  resizeMap();

  $(function() {
    if(!isScrolledIntoView('.short-box')){
      $('.w2').removeClass('page-map');
      $('body').css('overflow', 'auto');
    }
  });

 

</script>
