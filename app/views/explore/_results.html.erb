<% searchable_results.each do |searchable|%>
  <% if searchable.event %>
    <% type = RecordType.types[:event] %>
    <% record = searchable.event %>
  <% elsif searchable.comment %>
    <% type = RecordType.types[:search_comment] %>
    <% record = searchable.comment.action %>
  <% else %>
    <% unless Rails.env.production? || Rails.env.staging?  %>
      <p>YOU SHOULD NOT SEE THIS (DEBUG MESSAGE)</p>
    <% end %>

  <% end %>

  <div id="result_for_searchable_<%= searchable.id -%>" class="post <%= "result-list-item hidden" if defined?(hidden) -%>">
    <%= render "shared/records", :record_type => type, :record => record %>
  </div> 
<% end %>
