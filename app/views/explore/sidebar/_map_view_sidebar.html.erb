<script>
  $(function(){
    $('.btn-open').click(function(){      
      $('.short-box').addClass('open', 500);
      $('.btn-open').hide();
      $('.btn-close').show();
      return false;
    });

    $('.btn-close').click(function(){
      $('.short-box').removeClass('open', 500);
      $('.btn-close').hide();
      $('.btn-open').show();
      return false;
    });
  })
</script>


