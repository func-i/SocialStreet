<div data-role="header" data-position="inline">
  <%#= link_to "Home", '/m', {'data-role' => 'button', 'data-theme' => 'a', 'data-position' => 'inline'}%>
  <a data-theme ="a" data-rel="back" data-icon="arrow-l">Back</a>
  <h1><%=link_to "SocialStreet", '/m'%></h1>
  <%= link_to "Filter", '#explore_filter', {'data-role' => 'button', 'data-theme' => 'a', 'data-position' => 'inline'}%>
</div>

<div data-role="content" id="list-view-explore-content">

  <% if !params[:keywords].blank? %>
    <div>
      Only Showing: <span class="colored-text-2" style="font-weight: bolder;"><%= params[:keywords] %></span> Events
      <span style="float:right;"><%= link_to "Remove", '#', {'id' => 'remove_filters'}%></span>
    </div>
    <br/>
  <% end %>

  <%= render "results"%>

</div>

<div data-role="footer" data-position="fixed">
  <%= link_to "View Map", '#map-view-explore', {'id' => 'map_view_link', 'data-role' => 'button', 'data-theme' => 'b', 'data-transition' => 'flip', 'style' => 'width: 100%;
  height: 35px;'}%>
</div>