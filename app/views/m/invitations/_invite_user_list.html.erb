
<% (user_list || []).each_with_index do |connection, index| %>
<div class="invitation <%="end-pageless" if index == (user_list.length-1) && defined? first_insert %> ">
  <%= check_box_tag "user_ids[]", connection.to_user.id, false, :id => "user_#{connection.to_user.id}"  %>
  <label for="user_<%=connection.to_user.id%>"><%= avatar(connection.to_user, :exclude_link => true, :size => "40x40") %>
    <span><%= connection.to_user.name %></span>
  </label>
</div>
<% end %>